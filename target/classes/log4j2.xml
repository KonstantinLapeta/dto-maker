<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="scanner">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{yyyy-MM-dd HH:mm:ss:SS} [%logger{2}] [%t] %-5level: %msg%n%throwable}{ERROR=red,INFO=#DDDDDD}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
